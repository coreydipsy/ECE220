.ORIG x3000

		AND R5, R5, #0
		LDI R1, DATA_ONE
		LDI R2, DATA_TWO

AGAIN		AND R1, R1, R1
		BRp R1_POS
		BRn R1_NEG
		BRz R1_ZERO

R1_POS		AND R2, R2, R2
		BRp NEXT_ONE
		ADD R5, R5, #1
		BRnzp NEXT_ONE


R1_NEG		AND R2, R2, R2
		BRn NEXT_ONE
		ADD R5, R5, #1
		BRnzp NEXT_ONE

R1_ZERO		AND R2, R2, R2
		BRz DONE
		BRnzp NEXT_ONE



NEXT_ONE	ADD, R1, R1, R1
		ADD, R2, R2, R2
		BRnzp AGAIN

DONE		HALT







DATA_ONE	.FILL x5000
DATA_TWO	.FILL x5001


.END




















